<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="modal-layout" template="/WEB-INF/views/tiles/modal-layout.jsp">
        <put-attribute name="modal" value="" />
    </definition>

<definition name="modal/*" extends="modal-layout">
    <put-attribute name="modal" value="/WEB-INF/views/modal/{1}.jsp"/>
</definition>

    <!-- main layout -->
    <definition name="layout-tiles" template="/WEB-INF/views/tiles/tiles-layout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/tiles/headerTemplate.jsp" />
        <put-attribute name="nav" value="/WEB-INF/views/tiles/navTemplate.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="foot" value="/WEB-INF/views/tiles/footerTemplate.jsp" />
    </definition>



    <definition name="*/*" extends="layout-tiles">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
        <put-attribute name="title" value="test" />
    </definition>

    <definition name="*/*/*" extends="layout-tiles">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
        <put-attribute name="title" value="test" />
    </definition>
</tiles-definitions>